                <ComboBoxItem Content="Assam"/>
                <ComboBoxItem Content="Bihar"/>
                <ComboBoxItem Content="Chandigarh"/>
                <ComboBoxItem Content="Chhattisgarh"/>
                <ComboBoxItem Content="Dadra and Nagar Haveli"/>
                <ComboBoxItem Content="Daman and Diu"/>
                <ComboBoxItem Content="Delhi"/>
                <ComboBoxItem Content="Goa"/>
                <ComboBoxItem Content="Gujarat"/>
                <ComboBoxItem Content="Haryana"/>
                <ComboBoxItem Content="Himachal Pradesh"/>
                <ComboBoxItem Content="Jammu and Kashmir"/>
                <ComboBoxItem Content="Jharkhand"/>
