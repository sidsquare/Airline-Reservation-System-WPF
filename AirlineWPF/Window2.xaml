            <TextBox x:Name="b7" Margin="25,375,0,0" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" KeyboardNavigation.TabIndex="6"/>
            <PasswordBox x:Name="b8" Margin="25,425,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="131" Height="24" KeyboardNavigation.TabIndex="7"/>

        </Grid>
        <Grid HorizontalAlignment="Center" Height="465" Margin="80,10,371,61" VerticalAlignment="Center" Width="150">
            <Label Content="First Name" HorizontalAlignment="Left" Margin="40,24,0,0" VerticalAlignment="Top" Height="32" Width="115" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Label Content="Last Name" HorizontalAlignment="Left" Margin="40,74,0,0" VerticalAlignment="Top" Height="32" Width="115" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
